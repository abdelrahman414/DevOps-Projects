[Unit]
Description=Gunicorn instance to serve notetaking
After=network.target

[Service]
User=appuser
Group=appuser
WorkingDirectory=/srv/notetaking
Environment="PATH=/srv/notetaking/venv/bin"
ExecStart=/srv/notetaking/venv/bin/gunicorn -w 3 -b 127.0.0.1:8000 app:app

[Install]
WantedBy=multi-user.target
